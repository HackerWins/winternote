{
  "name": "summernote1",
  "version": "0.0.1",
  "description": "Super simple WYSIWYG editor",
  "main": "dist/summernote.js",
  "scripts": {
    "dev": "rollup -w -c config/rollup.config.dev.js",
    "build": "rollup -c config/rollup.config.prod.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "test": "karma start karma.conf.js --single-run",
    "test:watch": "karma start karma.conf.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/summernote/summernote1.git"
  },
  "author": "Summernote Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/summernote/summernote1/issues"
  },
  "homepage": "https://github.com/summernote/summernote1#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "karma": "^3.1.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-typescript": "^3.0.13",
    "mocha": "^5.2.0",
    "rollup": "^1.0.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-serve": "^0.6.1",
    "rollup-plugin-typescript": "^1.0.0",
    "tslib": "^1.9.3",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {}
}
